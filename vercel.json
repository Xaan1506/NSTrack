{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "yarn build",
        "installCommand": "yarn"
      }
    },
    {
      "src": "api/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.py" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ],
  "functions": {
    "api/server.py": {
      "maxDuration": 10,
      "runtime": "python3.11"
    }
  }
}
